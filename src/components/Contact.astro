<section id="contact" class="pt-20 mb-20">
  <form
    action=""
    class="w-full lg:w-2/3 p-10 rounded-md bg-stone-300 mx-auto text-neutral-700"
  >
    <fieldset>
      <legend
        class="mb-10 text-xl font-extrabold tracking-widest text-center text-neutral-700"
        >Contact Me</legend
      >
      <label class="text-sm"
        >Your name<span class="text-orange-400">*</span><input
          type="text"
          name="name"
          class="w-full mb-4 bg-stone-300 border-b focus:outline-none focus:bg-neutral-200"
          required
        /></label
      >
      <label class="text-sm"
        >Your email<span class="text-orange-400">*</span><input
          type="email"
          name="email"
          class="w-full mb-4 bg-stone-300 border-b focus:outline-none focus:bg-neutral-200"
          required
        /></label
      >
      <label class="text-sm"
        >Message<span class="text-orange-400">*</span><textarea
          cols="40"
          rows="5"
          class="w-full mt-2 mb-4 bg-stone-300 border-b focus:outline-none focus:bg-neutral-200"
          required></textarea></label
      >

      <input
        type="submit"
        class="px-4 py-2 float-right rounded-full bg-orange-600 text-neutral-100 cursor-pointer hover:bg-orange-500"
      />
    </fieldset>
  </form>
</section>
